<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="10dp"
    android:scrollbarThumbVertical="@color/skyblue"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:gravity="center"
android:orientation="vertical"
android:padding="16dp">

<ImageView
    android:id="@+id/imageView4"
    android:layout_width="150dp"
    android:layout_height="117dp"
    app:srcCompat="@drawable/mutalk" />

<TextView
    android:id="@+id/textView5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:text="계정을 생성해 보세요!!"
    android:gravity="center"
    android:textColor="@color/black"
    android:textSize="30dp"
    android:textStyle="bold" />

<TextView
    android:id="@+id/textView6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_weight="0"
    android:paddingBottom="15dp"
    android:text="아래의 칸들에 사용자 정보를 입력하시면 됩니다."
    android:textSize="13dp" />

<RelativeLayout
    android:id="@+id/sign_Name"
    android:layout_width="315dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="10dp"
    android:background="@drawable/email_addre2">

    <EditText
        android:id="@+id/signName"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@null"
        android:gravity="top"
        android:hint="이름"
        android:paddingBottom="5dp"
        android:textAppearance="@style/text"
        android:textSize="16dp" />

</RelativeLayout>

<LinearLayout
    android:layout_width="345dp"
    android:layout_height="110dp"
    android:paddingLeft="15dp"
    android:paddingTop="20dp">

    <RelativeLayout
        android:id="@+id/edit_ID"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="@drawable/email_addre2">

        <EditText
            android:id="@+id/signID"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:gravity="top"
            android:hint="아이디"
            android:paddingBottom="5dp"
            android:textAppearance="@style/text"
            android:textSize="16dp" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/checkIDButton"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/buttons"
        android:backgroundTint="@null"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:text="확인"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal" />

</LinearLayout>

<LinearLayout
    android:layout_width="390dp"
    android:layout_height="110dp"
    android:layout_marginBottom="0dp"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/sign_Birth"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/email_addre2">

        <EditText
            android:id="@+id/signBirth"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:gravity="top"
            android:hint="년"
            android:paddingBottom="5dp"
            android:textAppearance="@style/text"
            android:textSize="16dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sign_Birth2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="38dp"
        android:background="@drawable/email_addre2">

        <EditText
            android:id="@+id/signBirth2"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:gravity="top"
            android:hint="월"
            android:paddingBottom="5dp"
            android:textAppearance="@style/text"
            android:textSize="16dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sign_Birth3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="30dp"
        android:background="@drawable/email_addre2">

        <EditText
            android:id="@+id/signBirth3"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:gravity="top"
            android:hint="일"
            android:paddingBottom="5dp"
            android:textAppearance="@style/text"
            android:textSize="16dp" />

    </RelativeLayout>
</LinearLayout>

<LinearLayout
    android:layout_width="345dp"
    android:layout_height="110dp"
    android:paddingTop="20dp"
    android:paddingLeft="15dp">

    <RelativeLayout
        android:id="@+id/sign_PW"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:background="@drawable/email_addre2">

        <EditText
            android:id="@+id/signPW"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:gravity="top"
            android:hint="비밀번호"
            android:paddingBottom="5dp"
            android:textAppearance="@style/text"
            android:inputType="textPassword"
            android:textSize="16dp" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/togglePasswordVisibility"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_visibility_off" />


</LinearLayout>

        <TextView
            android:id="@+id/passwordError"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="비밀번호 오류 메시지"
            android:visibility="gone"
            android:textColor="@android:color/holo_red_dark" />


    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="110dp"
        android:paddingLeft="15dp"
        android:paddingTop="20dp">

<RelativeLayout
    android:id="@+id/sign_PW2"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="15dp"
    android:background="@drawable/email_addre2">

    <EditText
        android:id="@+id/signPW2"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@null"
        android:gravity="top"
        android:hint="비밀번호 확인"
        android:paddingBottom="5dp"
        android:textAppearance="@style/text"
        android:inputType="textPassword"
        android:textSize="16dp" />



</RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/checkPasswordButton"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/buttons"
            android:backgroundTint="@null"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal" />

    </LinearLayout>
        <TextView
            android:id="@+id/passwordMatchError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="비밀번호 일치 여부"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone" />

<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/signupbutton"
    android:layout_width="331dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="20dp"
    android:background="@drawable/buttons"
    android:backgroundTint="@null"
    android:text="계정 생성"
    android:textColor="@color/white"
    android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/login11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_weight="0"
            android:paddingBottom="15dp"
            android:textColor="@color/black"
            android:text="이미 계정이 있으신가요?"
            android:layout_marginRight="10dp"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/login12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_weight="0"
            android:textColor="@color/skyblue"
            android:paddingBottom="15dp"
            android:text="Login"
            android:textSize="14dp" />

        </LinearLayout>

</LinearLayout>
</ScrollView>
